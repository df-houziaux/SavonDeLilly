@model ResetPassword

@{
    ViewData["Title"] = "Réinitialisation du mot de passe";
}

<h2 class="text-center">Réinitialisation du mot de passe</h2>
<p class="text-center">Entrez un nouveau mot de passe sécurisé.</p>

<form method="post" asp-action="ResetPassword">
    <input type="hidden" asp-for="Token" />
    <input type="hidden" asp-for="Email" />

    <div class="mb-3">
        <label for="password" class="form-label">Nouveau mot de passe</label>
        <input type="password" class="form-control" id="password" asp-for="Password" required aria-required="true" />
    </div>
    <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirmez le mot de passe</label>
        <input type="password" class="form-control" id="confirmPassword" asp-for="ConfirmPassword" required aria-required="true" />
    </div>
    <button type="submit" class="btn btn-primary w-100">Réinitialiser</button>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success text-center mt-3">@ViewBag.Message</div>
    }
</form>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center mt-3">@ViewBag.ErrorMessage</div>
}
