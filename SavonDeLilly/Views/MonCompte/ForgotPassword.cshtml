@{
    ViewData["Title"] = "Mot de passe oublié";
}

<h2 class="text-center">Réinitialiser votre mot de passe</h2>
<p class="text-center">Entrez votre adresse e-mail et nous vous enverrons un lien de réinitialisation.</p>

<form method="post" asp-action="ForgotPassword">
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="Email" required aria-required="true" />
    </div>
    <button type="submit" class="btn btn-primary w-100">Envoyer le lien</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success text-center mt-3">@ViewBag.Message</div>
}
